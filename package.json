{
  "name": "@serlo/notification-mail-service",
  "version": "0.1.4",
  "author": "Serlo Education e.V.",
  "repository": "git@github.com:serlo/notification-mail-service.git",
  "license": "Apache-2.0",
  "type": "module",
  "scripts": {
    "_eslint": "eslint \"{{__tests__,scripts,src}/**/*,*}.{js,ts}\"",
    "_prettier": "prettier .",
    "build": "yarn esbuild --bundle --outdir=dist --sourcemap --platform=node --tree-shaking=true --define:process.env.NODE_ENV=\\\"production\\\" src/index.ts",
    "codegen": "graphql-codegen --config codegen.cjs",
    "check:unused-dependencies": "depcheck",
    "check:unused-exports": "ts-unused-exports tsconfig.json",
    "docker:build": "docker build -t notification-mail-service-local-build:latest .",
    "docker:rm": "docker image rm notification-mail-service-local-build",
    "docker:run": "docker run --env-file .env --env-file .env-docker --add-host=host.docker.internal:host-gateway --name notification-mail-service-from-local-build notification-mail-service-local-build",
    "docker:stop": "docker stop notification-mail-service-from-local-build && docker container rm notification-mail-service-from-local-build",
    "format": "npm-run-all -c format:eslint format:prettier",
    "format:eslint": "yarn _eslint --fix",
    "format:prettier": "yarn _prettier --write",
    "lint": "npm-run-all --parallel lint:prettier lint:tsc lint:eslint",
    "lint:eslint": "yarn _eslint",
    "lint:prettier": "yarn _prettier --check",
    "lint:tsc": "tsc --noEmit",
    "mysql": "docker compose exec mysql serlo-mysql",
    "mysql:import-anonymous-data": "./scripts/mysql/import-anonymous-data.sh",
    "mysql:rollback": "docker compose exec mysql sh -c \"pv /docker-entrypoint-initdb.d/001-init.sql | serlo-mysql\"",
    "notify": "ts-node --experimental-specifier-resolution=node src",
    "start": "yarn start:docker",
    "start:docker": "docker compose up --detach",
    "stop": "yarn stop:docker",
    "stop:docker": "docker compose down",
    "template": "TS_NODE_PROJECT='tsconfig.prod.json' NODE_OPTIONS='--experimental-specifier-resolution=node' nodemon --exec ts-node --watch src scripts/template-server.tsx",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --runInBand --forceExit",
    "test:e2e": "./scripts/e2e_test.sh"
  },
  "dependencies": {
    "@graphql-typed-document-node/core": "^3.2.0",
    "dotenv": "^16.4.5",
    "graphql": "^16.8.1",
    "graphql-request": "^6.1.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.9.2",
    "nodemailer": "^6.9.12",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/client-preset": "^4.2.4",
    "@graphql-codegen/introspection": "4.0.3",
    "@jest/globals": "^29.7.0",
    "@jest/types": "^29.6.3",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^18.19.24",
    "@types/nodemailer": "^6.4.14",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "depcheck": "^1.4.7",
    "esbuild": "^0.20.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.34.1",
    "express": "^4.18.3",
    "fp-ts": "^2.16.3",
    "io-ts": "^2.2.21",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-unused-exports": "^10.0.1",
    "typescript": "^5.4.2"
  },
  "packageManager": "yarn@3.6.1",
  "engines": {
    "node": "^18.0.0"
  }
}
