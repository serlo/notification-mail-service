{
  "name": "@serlo/notification-mail-service",
  "version": "0.1.3",
  "author": "Serlo Education e.V.",
  "repository": "git@github.com:serlo/notification-mail-service.git",
  "license": "Apache-2.0",
  "type": "module",
  "scripts": {
    "_eslint": "eslint \"{{__tests__,scripts,src}/**/*,*}.{js,ts}\"",
    "_prettier": "prettier .",
    "build": "tsc -p ./tsconfig.prod.json",
    "codegen": "graphql-codegen --config codegen.cjs",
    "format": "npm-run-all -c format:eslint format:prettier",
    "format:eslint": "yarn _eslint --fix",
    "format:prettier": "yarn _prettier --write",
    "lint": "npm-run-all --parallel lint:prettier lint:tsc lint:eslint",
    "lint:eslint": "yarn _eslint",
    "lint:prettier": "yarn _prettier --check",
    "lint:tsc": "tsc --noEmit",
    "mysql": "docker-compose exec mysql mysql --user=root --password=secret serlo",
    "mysql:dump": "NODE_OPTIONS='--experimental-specifier-resolution=node' ts-node scripts/mysql-dump",
    "mysql:rollback": "NODE_OPTIONS='--experimental-specifier-resolution=node' ts-node scripts/mysql-rollback",
    "notify": "NODE_OPTIONS='--experimental-specifier-resolution=node' ts-node src",
    "start": "docker-compose up --detach",
    "stop": "docker-compose down",
    "template": "webpack-cli serve --mode=development --env development --open --hot",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --runInBand --forceExit",
    "test:e2e": "yarn mysql:rollback && yarn test e2e",
    "test:unit": "yarn test notify-users"
  },
  "dependencies": {
    "@graphql-typed-document-node/core": "^3.2.0",
    "dotenv": "^16.0.3",
    "graphql": "^16.7.1",
    "graphql-request": "^5.0.0",
    "jsonwebtoken": "^9.0.0",
    "mysql2": "^2.3.3",
    "nodemailer": "^6.8.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.16.1",
    "@graphql-codegen/client-preset": "^4.0.1",
    "@graphql-codegen/introspection": "2.2.1",
    "@jest/globals": "^29.6.1",
    "@jest/types": "^29.6.1",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/mysql": "^2.15.21",
    "@types/node": "^18.11.17",
    "@types/node-cron": "^3.0.8",
    "@types/nodemailer": "^6.4.6",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.2.6",
    "@types/webpack": "^5.28.0",
    "@types/webpack-dev-server": "^4.7.2",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.46.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-react": "^7.31.11",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^29.6.1",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.1",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths-webpack-plugin": "^4.0.1",
    "typescript": "^5.1.6",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "packageManager": "yarn@3.6.1",
  "engines": {
    "node": "^18.0.0"
  }
}
