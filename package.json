{
  "name": "@serlo/notification-mail-service",
  "version": "0.0.0",
  "author": "Serlo Education e.V.",
  "repository": "git@github.com:serlo/notification-mail-service.git",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "_eslint": "eslint \"{{__tests__,scripts,src}/**/*,*}.{js,ts}\"",
    "_prettier": "prettier .",
    "format": "npm-run-all -c format:*",
    "format:eslint": "yarn _eslint --fix",
    "format:prettier": "yarn _prettier --write",
    "lint": "npm-run-all --parallel lint:prettier lint:tsc lint:eslint",
    "lint:eslint": "yarn _eslint",
    "lint:prettier": "yarn _prettier --check",
    "lint:tsc": "tsc --noEmit",
    "mysql": "docker-compose exec mysql mysql --user=root --password=secret serlo",
    "mysql:dump": "ts-node scripts/mysql-dump",
    "mysql:rollback": "ts-node scripts/mysql-rollback",
    "start": "docker-compose up --detach",
    "stop": "docker-compose down",
    "notify": "ts-node src",
    "scheduler": "ts-node src/cron/hourly-mail.ts",
    "test": "jest --config jest.config.js --runInBand --forceExit",
    "codegen": "graphql-codegen --config codegen.ts"
  },
  "main": "index.js",
  "dependencies": {
    "@types/jest": "^29.1.2",
    "@typescript-eslint/parser": "^5.40.0",
    "dotenv": "^16.0.3",
    "graphql-request": "^5.0.0",
    "jest": "^29.1.2",
    "moment": "^2.29.4",
    "msw": "^0.47.4",
    "mysql2": "^2.3.3",
    "nodemailer": "^6.8.0",
    "nodemailer-react": "^1.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-jest": "^29.0.3"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.15.0",
    "@types/express": "^4.17.14",
    "@types/mysql": "^2.15.21",
    "@types/node": "^18.7.23",
    "@types/node-cron": "^3.0.4",
    "@types/nodemailer": "^6.4.6",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-react": "^7.31.10",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4",
    "@graphql-codegen/introspection": "2.2.1",
    "@graphql-codegen/client-preset": "1.2.1"
  }
}
